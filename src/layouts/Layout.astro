---
interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content="Astro description" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
  </head>
  <body>
    <slot />
  </body>
</html>
<style is:global>
  /* :root {
    --accent: 136, 58, 234;
    --accent-light: 224, 204, 250;
    --accent-dark: 49, 10, 101;
    --accent-gradient: linear-gradient(
      45deg,
      rgb(var(--accent)),
      rgb(var(--accent-light)) 30%,
      white 60%
    );
  } */
  html {
    font-family: "inter", sans-serif, system-ui;
    background: #0b0b0b;
  }
  body {
    margin: auto;
    width: 95%;
    display: flex;
    align-items: center;
    justify-content: center;
    background-color: #0b0b0b;
    color: white;
    height: 100vh;
  }
  h2 {
    font-family: "Inter", sans-serif, system-ui;
    font-weight: 700;
    font-size: 32px;
  }
  h3 {
    font-family: "Inter", sans-serif, system-ui;
    font-weight: 400;
    font-size: 20px;
  }
  span {
    color: #898e96;
    font-family: "Inter", sans-serif, system-ui;
    font-weight: 400;
  }
  button {
    width: 100%;
    display: flex;
    align-items: center;
    justify-content: center;
    background-color: #d9ff42;
    color: #0b0b0b;
    font-weight: 700;
    padding: 12px 24px;
    border-radius: 50px;
  }


  @media screen and (max-width: 700px) {
    body {
      height: auto;
    }
  }
</style>
