---
interface Props {
  title: string;
}

const { title } = Astro.props;
const theme = "dark-theme";
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content="Astro description" />
    <meta name="viewport" content="width=device-width" />
    <!-- <link rel="icon" type="image/svg+xml" href="/favicon.svg" /> -->
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
  </head>
  <body>
    <slot />
  </body>
</html>
<style is:global>
  .dark-theme {
    --text: white; /* (Dark Mode Text & Light Mode Elements) */
    --text-secundary-text: #898e96;

    --background: #0b0b0b; /* (Dark Mode Background) */
    --card-background: #191d20; /* (Dark Mode Elements) */
  }

  .light-theme {
    --text: #0b0b0b; /* (light mode text) */
    --text-secundary-text: #5a5a5a;

    --background: #b8b8b8; /* (Light Mode Background) */
    --card-background: #cacaca; /* (Dark Mode Text & Light Mode Elements) */
  }

  html {
    font-family: "inter", sans-serif, system-ui;
  }
  ::selection {
    background-color: #d9ff42;
    color: #0b0b0b;
  }
  body {
    margin: auto;
    max-width: 1200px;
    display: flex;
    align-items: center;
    justify-content: center;
    background-color: var(--background);
    color: var(--text);
    height: 100vh;
  }
  h2 {
    font-family: "Inter", sans-serif, system-ui;
    font-weight: 700;
    font-size: 30px;
  }
  h3 {
    font-family: "Inter", sans-serif, system-ui;
    font-weight: 400;
    font-size: 20px;
  }
  span {
    color: var(--text-secundary-text);
    font-family: "Inter", sans-serif, system-ui;
    font-weight: 400;
  }
  button {
    width: 100%;
    display: flex;
    align-items: center;
    justify-content: center;
    background-color: #d9ff42;
    color: #0b0b0b;
    font-weight: 700;
    padding: 12px 24px;
    border-radius: 50px;
    transition: all 0.3s ease;
  }

  button:hover {
    background-color: #d9ff42;
    cursor: pointer;
    box-shadow: #d9ff4250 0px 0px 10px 3px;
    color: #0b0b0b;
    scale: 1.05;
  }

  @media screen and (max-width: 700px) {
    body {
      height: auto;
      width: 95%;
    }
  }
</style>
