---
const { tags, text } = Astro.props;
---

<div
  class="flex flex-col gap-6 bg-[var(--card-background)] rounded-xl p-8 justify-center w-full"
>
  <h2 class="text-balance">
    {text}
  </h2>
  <h2 class="font-normal text-[var(--text-secundary-text)] text-[28px]">
    <ul class="flex md:flex-row flex-col gap-4">
      {tags?.map((tag: string) => <li><span class="text-[#d9ff42]">/</span>{tag}</li>)}
    </ul>
  </h2>
</div>
